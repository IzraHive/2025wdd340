<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/public/css/styles.css">
  <style>
    /* Optional: small style for toggle button */
    .toggle-password {
      cursor: pointer;
      margin-left: 5px;
      font-size: 0.9em;
    }

    /* Style for password requirements */
    .password-requirements {
      font-size: 0.85em;
      color: #333;
      background-color: #f1f1f1;
      padding: 8px;
      border-left: 4px solid #007BFF;
      margin: 5px 0 15px 0;
      border-radius: 4px;
    }
  </style>
</head>
<body>
  <main class="login-container">
    <h1><%= title %></h1>

    <% if (messages && messages.length > 0) { %>
      <div class="flash-messages">
        <% messages.forEach(function(msg){ %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <form action="/account/login" method="POST" class="login-form">
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" required>

      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required
             pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <span class="toggle-password" onclick="togglePassword()">Show</span>

      <div class="password-requirements">
        Password must be at least 12 characters long, include at least 1 uppercase letter, 1 number, and 1 special character.
      </div>

      <button type="submit">Login</button>
    </form>

    <p class="register-link">
      Don't have an account? <a href="/account/register">Register here</a>
    </p>
  </main>

  <script>
    // Toggle password visibility
    function togglePassword() {
      const passwordField = document.getElementById('account_password');
      const toggleBtn = document.querySelector('.toggle-password');
      if (passwordField.type === 'password') {
        passwordField.type = 'text';
        toggleBtn.textContent = 'Hide';
      } else {
        passwordField.type = 'password';
        toggleBtn.textContent = 'Show';
      }
    }
  </script>
</body>
</html>
