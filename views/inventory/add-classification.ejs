<h1>Add New Classification</h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="post">
  <label for="classification_name">Classification Name:</label>
  <p>Name cannot contain spaces or special characters.</p>
  <input type="text" name="classification_name" id="classification_name"
    pattern="^[A-Za-z0-9]+$" required>
  <button type="submit">Add Classification</button>
</form>

<script>
  const form = document.querySelector('form')
  const input = document.getElementById('classification_name')
  form.addEventListener('submit', e => {
    if (!/^[A-Za-z0-9]+$/.test(input.value)) {
      e.preventDefault()
      alert('Classification name cannot contain spaces or special characters')
    }
  })
</script>
